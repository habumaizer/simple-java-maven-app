pipeline {
    agent {
        kubernetes {
            podTemplate {
                label 'maven'
                containerTemplate {
                    name 'maven'
                    image 'maven:3-alpine'
                }
                containerTemplate {
                    name 'jnlp'
                    image 'jenkins/inbound-agent:latest'
                }
            }
        }
    }
    stages {
        stage('Build') {
                container('maven') {
                    sh 'mvn -B -DskipTests clean package'
                }
        }
    }
}
